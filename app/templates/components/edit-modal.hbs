<div class="modal" tabindex="-1" role="dialog" id="myModalEdit">
  <div class="modal-dialog" role="document" style="max-width:600px;">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">{{car-title-type car.brand car.model}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form {{action "editItem" car on="submit"}}>
          <div class="form-group">
            {{input class="form-control" value=car.brand}}
          </div>
          <div class="form-group">
            {{input class="form-control" value=car.model}}
          </div>
          <div class="form-group">
            {{input class="form-control" value=car.engine}}
          </div>
          <div class="form-group">
            {{input class="form-control" value=car.power}}
          </div>
          <div class="form-group">
            {{input class="form-control" value=car.doors}}
          </div>
          <div class="form-group">
            {{input class="form-control" value=car.colors}}
          </div>
          <div class="form-group">
            {{input class="form-control" value=car.drive_wheel}}
          </div>
          <div class="form-group">
            {{input class="form-control" value=car.category}}
          </div>
          <div class="form-group">
            {{input class="form-control" value=car.price}}
          </div>
          <div class="form-group">
            {{input class="form-control" value=car.city}}
          </div>
          <div class="form-group">
            {{input class="form-control" value=car.address}}
          </div>
          <div class="form-group">
            {{input class="form-control" value=car.description}}
          </div>
          <button type="submit" class="btn btn-success">Save changes</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>